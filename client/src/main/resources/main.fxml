<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="300.0"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.geekbrains.cloudstorage.client.MainController"
      style="-fx-background-color: linear-gradient(#fff 0%, #eee 10%, #ddd 90%, #bbb 100%);" fx:id="rootNode">
    <HBox>
        <!--<TextField HBox.hgrow="ALWAYS" fx:id="tfFileName"
                   promptText="Type filename for download from server..." focusTraversable="false"/>-->
        <Button HBox.hgrow="ALWAYS" text="Download" onAction="#pressOnDownloadBtn"/>
        <Button HBox.hgrow="ALWAYS" text="Upload" onAction="#pressOnUploadBtn"/>
        <Button HBox.hgrow="ALWAYS" text="Delete" onAction="#pressOnDeleteBtn"/>
    </HBox>
    <ListView fx:id="serverFilesList" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS"/>
</VBox>

